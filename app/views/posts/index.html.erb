<h1>This is the post index page</h1>
<table class = "table">

	<tr>
		<td>Title</td>
		<td>Content</td>
		<td>Posted At</td>
	</tr>
</table>

<table class = "table">
	<% @posts.each do |post| %>
	<tr>
		<td><%=link_to post.title, post_path(post)%></td>
		<td><%=post.content%></td>
		<td><%=post.created_at.strftime("%B %d, %Y %l:%M %P %Z")%></td>
	<%end%>
</table>




<%= link_to "Post a Post", new_post_path %>